[core]
	editor = nvim
	pager = less -FRX --mouse
	fsmonitor = true
[init]
	defaultBranch = main
[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[alias]
	ddiff = difftool
	difft = difftool
	dlog = "!f() { GIT_EXTERNAL_DIFF=difft git log -p --ext-diff $@; }; f"
	dshow = "!f() { GIT_EXTERNAL_DIFF=difft git show --ext-diff $@; }; f"
	diffbat = "!f() { git diff --no-color --unified=9999 $@ | bat --language=diff --style=changes,numbers,snip; }; f"
	delta = "!f() { git diff $@ | delta --navigate; }; f"
	delta-split = "!f() { git diff $@ | delta --navigate --side-by-side; }; f"
	fsm-start = fsmonitor--daemon start
	fsm-stop = fsmonitor--daemon stop
	fsm-status = fsmonitor--daemon status
[delta]
	features = catppuccin-mocha
	file-decoration-style = none
	hunk-header-decoration-style = none
	minus-emph-style = "#181825" "#eba0ac"
	plus-emph-style = "#181825" "#a6e3a1"
# Catppuccin delta themes from https://github.com/catppuccin/delta
[include]
	path = ~/.dotfiles/git/catppuccin.gitconfig
[include]
	path = ~/.gitconfig.local
[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'
[mergetool]
	prompt = false
[rerere]
	enabled = true
	autoupdate = true
