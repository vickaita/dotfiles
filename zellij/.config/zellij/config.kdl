// Zellij configuration file

// UI settings
ui {
    pane_frames {
        rounded_corners true
        hide_session_name false
    }
}

// Theme
theme "catppuccin-mocha"

// Default shell
default_shell "zsh"

// Mouse mode
mouse_mode true

// Pane scroll back buffer
scroll_buffer_size 10000

// Copy command (macOS)
copy_command "pbcopy"

// Default layout
default_layout "compact"

// Session serialization
session_serialization false

// Auto attach
auto_attach true

// Key bindings
keybinds {
    normal {
        // Vim-like pane navigation
        bind "h" { MoveFocus "Left"; }
        bind "l" { MoveFocus "Right"; }
        bind "j" { MoveFocus "Down"; }
        bind "k" { MoveFocus "Up"; }
        
        // Easier splits
        bind "\\" { NewPane "Right"; }
        bind "-" { NewPane "Down"; }
        
        // Quick tab switching
        bind "1" { GoToTab 1; }
        bind "2" { GoToTab 2; }
        bind "3" { GoToTab 3; }
        bind "4" { GoToTab 4; }
        bind "5" { GoToTab 5; }
    }
    
    pane {
        bind "h" { MoveFocus "Left"; }
        bind "l" { MoveFocus "Right"; }
        bind "j" { MoveFocus "Down"; }
        bind "k" { MoveFocus "Up"; }
    }
}